				<conditional><![CDATA[cond5]]></conditional>
				<types>
					<type>GURETO_DOOM_argentaxe</type>
				</types>
				<damageTypes>
					<damage>PHYSICAL</damage>
				</damageTypes>
				<primaryColours/>
				<secondaryColours/>
			</weapon>
        </mainWeapons>
		
        <offhandWeapons>
