					<type>GURETO_DOOM_hellshot</type>
				</types>
				<damageTypes/>
				<primaryColours/>
				<secondaryColours/>
			</weapon>
        </offhandWeapons>
		
		
		<guaranteedClothingEquips/>

		
		<clothingType>
			<conditional><![CDATA[!RND.nextInt(100)<=100]]></conditional>
			<types>
				<type>CHEST_SARASHI</type>
			</types>
			<primaryColours>
